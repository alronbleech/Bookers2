<main class="pt-2">
  <div class="container">
    <div class="row">
      <div class="flex-column col-md-3">
        <div>
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="mb-5 border-top">
            <tr class="border-bottom">
              <th class="p-2">name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th class="p-2">introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
            <%= link_to edit_user_path(@user), class: "btn btn-block border border-dark btn-outline-secondary" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
        </div>

        <div class="mt-3">
          <%= form_with model: @book do |f| %>
          <div>
            <h2>New book</h2>
            <p>Title</p>
            <%= f.text_field :title, class: "btn border border-1 rounded" %>
            <p>Opinion</p>
            <%= f.text_area :body, class: "btn border border-1 rounded" %>
            <div>
              <%= f.submit 'Create Book', class: "mt-3 btn btn-success text-light" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>

      <div class="flex-column offset-md-1 col-md-8">
        <h2>Book detail</h2>
        <table class="table border-top">
          <tbody>
            <tr>
              <td style="width: 20%">
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100,100) %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@user.id) do %>
                  <%= @books.title %>
                <% end %>
              </td>
              <td><%= @books.body %></td>
              <% if @user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
