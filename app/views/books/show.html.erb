<div class="pt-2">
    <% if @book.errors.any? %>
  <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="flex-column col-md-3">
        <%= render 'users/user', book: @book ,user: @user %>
      </div>

      <div class="flex-column offset-md-1 col-md-8">
        <h2>Book detail</h2>
        <table class="table border-top">
          <tbody>
            <tr>
              <td style="width: 20%">
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100,100) %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@user.id) do %>
                  <%= @books.title %>
                <% end %>
              </td>
              <td><%= @books.body %></td>
              <% if @user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
