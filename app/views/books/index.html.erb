<div class="pt-2">
    <% if @book.errors.any? %>
  <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="flex-column col-md-3">
        <%= render 'users/user', book: @book ,user: @user %>
      </div>

      <div class="flex-column offset-md-1 col-md-8">
        <h2>Books</h2>
        <table class="table table-invers table-hover border-top">
          <thead>
          <tr class="border-bottom">
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
          </thead>
          <% @books.each do |book| %>
          <tr class="border-top">
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
