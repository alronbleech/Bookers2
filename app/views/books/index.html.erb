<main>
  <div class="container">
    <div class="row">
      <div class="flex-column col-4 bg-warning">
        <div>
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <p>name   名前</p>
          <p>introduction</p>
          <p>プロフ設定</p>
        </div>

        <div>
          <h1>New book</h1>
          <%= form_with model: @book do |f| %>
            <label>title</label>
            <%= f.text_field :title %>
            <label>Opinion</label>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>
      </div>

      <div class="flex-column col-8 bg-info">
        <h1>Books</h1>
        <table>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><span><%= book.title %></span></td>
            <td><span><%= book.body %></span></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
