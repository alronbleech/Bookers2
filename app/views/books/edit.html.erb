<div class="container">
  <div class="row m-2">
    <div class="col-lg-5 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
      <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <p class="block mt-2 md-0">Title</p>
        <%= f.text_field :title, class: "text-left btn form-control border border-1 rounded" %>
        <p class="block mt-3 mb-2">Opinion</p>
        <%= f.text_area :body, class: "text-left btn form-control border border-1 rounded" %>
        <div>
          <%= f.submit 'Update Book', class: "mt-3 btn btn-success text-light" %>
        </div>
      <% end %>
      <p>
        <%= link_to "Show", book_path(@book.id) %>
        <strong> | </strong>
        <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>
