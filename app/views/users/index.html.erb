<div class="pt-2">
    <% if @book.errors.any? %>
  <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="flex-column col-md-3">
        <%= render 'user', book: @book ,user: @user %>
      </div>

      <div class="flex-column offset-md-1 col-md-8">
        <h2>Users</h2>
        <table class="table table-invers border-top">
          <thead>
          <tr class="border-bottom">
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          </thead>
          <% @users.each do |user| %>
          <tr class="border-top">
            <td>
              <%= image_tag user.get_profile_image(80,80) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</di>
