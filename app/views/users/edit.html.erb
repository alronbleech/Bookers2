<div class="container">
  <div class="row m-2">
    <div class="col-lg-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <p class="block mt-2 md-0">Name</p>
          <%= f.text_field :name, class: "text-left btn form-control border border-1 rounded" %>
        <p class="block mt-3 mb-2">image</p>
          <%= f.file_field :profile_image, accept: "image/*" %>
        <p class="block mt-3 mb-2">introduction</p>
          <%= f.text_area :introduction, class: "text-left btn form-control border border-1 rounded" %>
        <div>
          <%= f.submit 'Update User', class: "mt-3 btn btn-secondary text-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
